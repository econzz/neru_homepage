<%= link_to "back to top", games_path %>
<%if @game.errors.any?%>
<h2>THERE IS AN ERROR</h2>
<ul>
  <% @game.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
  <%end%>
</ul>
<%end%>


<%= form_for @game do |f| %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <%= f.submit%>

<%end%>